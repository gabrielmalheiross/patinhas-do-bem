generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Animais {
  id         String     @id @default(uuid())
  nome       String     @db.VarChar(255)
  descricao  String     @db.Text
  especie    Especie
  sexo       Sexo
  maturidade Maturidade
  status     Int
}

enum Sexo {
  MACHO
  FEMEA
}

enum Especie {
  GATO
  CACHORRO
}

enum Maturidade {
  FILHOTE
  ADULTO
  IDOSO
}
